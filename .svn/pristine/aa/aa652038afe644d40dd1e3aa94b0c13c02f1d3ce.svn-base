@charset "utf-8";
/* CSS Document */

.dt-content{
	width:1200px;
	margin:0 auto;
	}
.dt-title p{
	font-size:26px;
	color:#333;
	margin-bottom:10px;
	}
.sub-heading{
	border-bottom:1px dashed #ddd;
	padding-bottom: 10px;
	}
.article-bg{
	width:1200px;
	margin:0 auto;
	background-color:#f9f9f9;
	}
.article-content {
    width: 1090px;
    margin: 0px auto;
    color: #333;
    padding-top: 20px;
    padding-bottom: 20px;
    margin-bottom: 40px;
    margin-top: 20px;
}
.article-content p {
    font-size: 16px;
    color: #666;
    line-height: 1.6em;
}
.dt-comment{
	width:1200px;
	margin:0 auto;
	}
.dt-comtitle{
	background:url(../img/article-comment.jpg) no-repeat;
	width:1200px;
	height:40px;
	}
.comment-list {
    width: 1200px;
    margin-top: 20px;
    background-color: #F9F9F9;
    height: auto;
    padding-bottom: 50px;
}
.comment-list ol li{
	list-style-type:none;
	width:900px;
	padding:30px;
	border-bottom:1px solid #ddd;
	position:relative;
	}
.comment-list .comm-logo{
	display:inline-block;
	float:left;
	width:50px;
	height:50px;
	}
.comment-list .comm-author{
	display:inline-block;
	margin-left:20px;
	font-size:14px;
	color:#333;
	vertical-align: super;
	}
.comment-list .comm-data{
	display:inline-block;
	margin-left:20px;
	font-size:14px;
	color:#666;
	vertical-align: super;
	}
.comment-list .relapy-con{
	width:800px;
	word-break:break-word;
	display:block;
	font-size:14px;
	/* color:#333; */
	margin-left:70px;
	}
.comment-list .replay {
    display: block;
    margin-left: 97px;
    margin-top: 20px;
    color: #666;
    font-size: 14px;
	width:50px;
}
.replay-hf {
    display: block;
    background-color: #ddd;
    padding: 10px;
    margin-bottom: 10px;
	color:#666;
}

.comment-list .replay:hover{
	color:#6CF;
	cursor:pointer;
	}
.write-comment{
	width:1200px;
	margin:0 auto;	
}
.write-comment .fbpl{
	display:block;
	height:30px;
	line-height:30px;
	
}
.write-comment .comment-button {
    display: block;
    width: 100px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    float: right;
    margin-top: 20px;
    background-color:#e71f1a;
    color: #fff;
}
.write-comment .comment-button:hover{
	background-color:#b40a06;
	cursor:pointer;
	
}
.iconfont {
    font-family: "iconfont" !important;
    font-size: 16px;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    -moz-osx-font-smoothing: grayscale;
    margin-left: 74px;
    margin-top: 22px;
    position: absolute;
}
@font-face {font-family: 'iconfont';
    src: url('iconfont.eot'); /* IE9*/
    src: url('iconfont.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
    url('iconfont.woff') format('woff'), /* chrome、firefox */
    url('iconfont.ttf') format('truetype'), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
    url('iconfont.svg#iconfont') format('svg'); /* iOS 4.1- */
}